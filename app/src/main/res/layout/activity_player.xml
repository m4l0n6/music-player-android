<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <!-- Blurred background -->
    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.4"
        android:contentDescription="Background" />

    <!-- Dark gradient overlay -->
    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <!-- Main content with scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Top Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/circle_button_bg"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:contentDescription="Back"
                    android:padding="8dp"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Now Playing"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <ImageButton
                    android:id="@+id/btnDownload"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_button_bg"
                    android:src="@android:drawable/stat_sys_download"
                    android:contentDescription="Download"
                    android:padding="10dp"
                    app:tint="#FFFFFF" />
            </RelativeLayout>

            <!-- Album Cover with Vinyl Effect -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="32dp"
                android:gravity="center">

                <!-- Shadow effect -->
                <View
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shadow_circle"
                    android:alpha="0.5" />

                <!-- Vinyl disc (hidden behind) -->
                <ImageView
                    android:id="@+id/imgVinyl"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/vinyl_disc"
                    android:contentDescription="Vinyl"
                    android:visibility="gone" />

                <!-- Album cover (circular) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="140dp"
                    app:cardElevation="24dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:id="@+id/imgCover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="Album cover" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <!-- Song Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Song Title"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Artist Name"
                    android:textColor="#A0A0A0"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="16dp" />

                <!-- Action buttons (Like, Share, etc.) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnLike"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/circle_button_bg"
                        android:src="@android:drawable/btn_star_big_off"
                        android:contentDescription="Like"
                        android:padding="10dp"
                        android:layout_marginEnd="12dp"
                        app:tint="#FFFFFF" />

                    <ImageButton
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/circle_button_bg"
                        android:src="@android:drawable/ic_menu_share"
                        android:contentDescription="Share"
                        android:padding="10dp"
                        android:layout_marginEnd="12dp"
                        app:tint="#FFFFFF" />

                    <ImageButton
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/circle_button_bg"
                        android:src="@android:drawable/ic_menu_add"
                        android:contentDescription="Add to playlist"
                        android:padding="10dp"
                        app:tint="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressTint="#1DB954"
                    android:thumbTint="#FFFFFF"
                    android:progressBackgroundTint="#2A2A2A"
                    android:maxHeight="4dp"
                    android:minHeight="4dp"
                    android:splitTrack="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:id="@+id/txtCurrentTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00:00"
                        android:textColor="#A0A0A0"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/txtTotalTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00:30"
                        android:textColor="#A0A0A0"
                        android:textSize="12sp"
                        android:gravity="end"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Playback Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <!-- Shuffle Button -->
                <ImageButton
                    android:id="@+id/btnShuffle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:contentDescription="Shuffle"
                    app:tint="#FFFFFF"
                    android:padding="10dp"
                    android:layout_marginEnd="8dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Previous Button -->
                <ImageButton
                    android:id="@+id/btnPrevious"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_media_previous"
                    android:contentDescription="Previous"
                    app:tint="#FFFFFF"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp" />

                <!-- Play/Pause Button (large with gradient) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="#1DB954">

                    <ImageButton
                        android:id="@+id/btnPlayPause"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_media_play"
                        android:contentDescription="Play/Pause"
                        app:tint="#FFFFFF"
                        android:padding="18dp" />
                </androidx.cardview.widget.CardView>

                <!-- Next Button -->
                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_media_next"
                    android:contentDescription="Next"
                    app:tint="#FFFFFF"
                    android:padding="8dp"
                    android:layout_marginStart="12dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Repeat Button -->
                <ImageButton
                    android:id="@+id/btnRepeat"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_rotate"
                    android:contentDescription="Repeat"
                    app:tint="#FFFFFF"
                    android:padding="10dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Lyrics Section with modern design -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#15FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="#1DB954"
                            android:contentDescription="Lyrics icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lời bài hát"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false">

                        <TextView
                            android:id="@+id/txtLyrics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đang tải lời bài hát..."
                            android:textColor="#CCCCCC"
                            android:textSize="14sp"
                            android:lineSpacingExtra="8dp"
                            android:fontFamily="sans-serif"
                            android:paddingEnd="8dp" />
                    </ScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>