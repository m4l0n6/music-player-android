<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:background="#1E1E1E"
        android:elevation="6dp">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="←"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thư viện"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Search Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <EditText
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/search_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:hint="Tìm kiếm bài hát, ca sĩ, album..."
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:drawableTint="#AAAAAA"
            android:importantForAutofill="no"
            android:inputType="text" />
    </LinearLayout>

    <!-- Tabs -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- NEW: tab_library -->
            <TextView
                android:id="@+id/tab_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Tất cả"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="@drawable/tab_selected"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/cd_tab_library" />

            <TextView
                android:id="@+id/tabSongs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Bài hát"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="@drawable/tab_unselected"
                android:textColor="#AAAAAA"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/cd_tab_songs" />

            <TextView
                android:id="@+id/tabAlbums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Album"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="@drawable/tab_unselected"
                android:textColor="#AAAAAA"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/cd_tab_albums" />

            <TextView
                android:id="@+id/tabArtists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Nghệ sĩ"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="@drawable/tab_unselected"
                android:textColor="#AAAAAA"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/cd_tab_artists" />

            <TextView
                android:id="@+id/tabFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Yêu thích"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:background="@drawable/tab_unselected"
                android:textColor="#AAAAAA"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/cd_tab_favorites" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Danh sách bài hát -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:contentDescription="@string/cd_library_list" />

</LinearLayout>
