<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền Internet để phát nhạc và lấy dữ liệu -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Music App"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- SearchActivity - THÊM DÒNG NÀY -->
        <activity
            android:name=".SearchActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />

        <!-- Màn hình đăng nhập (màn hình chính khi mở app) -->
        <activity
            android:name=".login.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".libary.LibraryActivity" />
        <activity android:name=".profile.FavoritesActivity" />
        <activity android:name=".playlist.PlaylistsActivity" />
        <activity android:name=".profile.HistoryActivity" />
        <activity android:name=".profile.SettingsActivity" />
        <activity android:name=".profile.AboutActivity" />


        <!-- Màn hình danh sách nhạc -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="MissingClass" />

        <!-- Màn hình phát nhạc -->
        <activity
            android:name=".playlist.PlayerActivity"
            android:screenOrientation="portrait"
            tools:ignore="MissingClass" />
        <service
            android:name=".MusicService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <activity android:name=".ChatbotActivity"
            android:exported="true"
            android:label="Chatbot" />

    </application>

</manifest>